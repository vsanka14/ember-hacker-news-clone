<ul data-test-stories>
  {{#each this.visibleStories as |item index|}}
    <li>
      {{#if @isJobsPage}}
        <JobItem
          @index={{add index this.indexIncrementor}}
          @title={{item.title}}
          @url={{item.url}}
          @score={{item.score}}
          @by={{item.by}}
          @time={{item.time}}
          @descendants={{item.descendants}}
          @id={{item.id}}
          @isVisible={{item.isVisible}}
          @toggleItemVisibility={{@toggleItemVisibility}}
        />
      {{else}}
        <StoryItem
          @index={{add index this.indexIncrementor}}
          @title={{item.title}}
          @url={{item.url}}
          @score={{item.score}}
          @by={{item.by}}
          @time={{item.time}}
          @descendants={{item.descendants}}
          @id={{item.id}}
          @isVisible={{item.isVisible}}
          @toggleItemVisibility={{@toggleItemVisibility}}
        />
      {{/if}}
    </li>
  {{/each}}
</ul>
{{#if this.isMoreBtnVisible}}
  <LinkTo
    data-test-stories__more-btn
    type='button'
    class='mt-2 text-grey {{if @isJobsPage "ml-4" "ml-9"}}'
    @route={{this.router.currentRouteName}}
    @query={{hash p=this.nextPage}}
    aria-label='Link to next page'
  >More</LinkTo>
{{/if}}
{{#if this.isNoStoryFound}}
  <p class='text-grey' data-test-stories__no-stories-found>No stories found.</p>
{{/if}}